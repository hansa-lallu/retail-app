extends layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/product.css")

block content 
  if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            div.card__image
              img(src="https://shop.countdown.co.nz/Content/ProductImages/large/9415012150017.jpg/Champion-Standard-Flour.jpg", alt="Flour")
            div.card__content
              h2.product_price $4.00
              p.product_description A low protein flour suitable for cookies,sponge cakes,muffins and scones
            .card__actions
              button.btn Add to Cart
  else 
    h1 No Products
