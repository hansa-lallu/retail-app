<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card_header">
                            <h1 class="product_title"><%= product.title %></h1>
                        </header>
                        <div class="card_image">
                            <img src="https://shop.countdown.co.nz/Content/ProductImages/large/9415012150017.jpg/Champion-Standard-Flour.jpg"
                                alt="Standard-Flour">
                        </div>
                        <div class="card_content">
                            <h2 class="product_price">$4.00</h2>
                            <p class="product_description">A low protein flour suitable for cookies, sponge cakes, muffins and scones</p>
                        </div>
                        <div class="card_actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>